<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corlor_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/signUp_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/home_cash_"
        android:fontFamily="@font/spoqa_han_sans_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/signUp_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:text="실제 사용하는 이메일을 입력해주세요\n비번찾기등 입력하신 이메일로 전송됩니다"
        android:textColor="@color/home_cash_"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_text_1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:text="비밀번호 입력시 영어/숫자/특수문자 중 2가지 포함(8~15자)"
        android:textColor="@color/home_cash_"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_text_2" />


    <EditText
        android:id="@+id/signUp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textSize="24dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:inputType="textEmailAddress"
        android:paddingLeft="50dp"
        android:hint="이메일 입력"
        app:layout_constraintTop_toBottomOf="@id/signUp_text_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_manbo_alpha50"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signUp_email"/>

    <EditText
        android:id="@+id/signUp_pw_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:hint="비밀번호 입력"
        app:layout_constraintTop_toBottomOf="@id/signUp_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_manbo_alpha50"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signUp_pw_1"/>


    <EditText
        android:id="@+id/signUp_pw_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:hint="비밀번호 재입력"
        app:layout_constraintTop_toBottomOf="@id/signUp_pw_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_manbo_alpha50"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/signUp_pw_2"/>


    <Button
        android:id="@+id/signUp_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_manbo_alpha50"
        android:text="확 인"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/home_cash_"
        android:fontFamily="@font/kopubworld_dotum_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>