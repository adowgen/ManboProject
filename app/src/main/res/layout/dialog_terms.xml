<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/dialog_terms_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/dialog_corner_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/dialog_terms_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="약관 동의"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/home_cash_"
        android:fontFamily="@font/spoqa_han_sans_bold"
        app:layout_constraintTop_toTopOf="@id/dialog_terms_bg"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg"/>


    <TextView
        android:id="@+id/dialog_terms_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:text="아래 약관에 동의하시면\n만보캐시를 이용하실 수 있습니다."
        android:textColor="@color/home_cash_"
        android:textSize="17dp"

        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg"
        app:layout_constraintTop_toBottomOf="@+id/dialog_terms_title" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_terms_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />


    <FrameLayout
        android:id="@+id/dialog_terms_frame1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_terms_title2"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg" />

    <ImageView
        android:id="@+id/dialog_terms_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vec_checkbox_blank_circle_outline"
        app:layout_constraintTop_toTopOf="@id/dialog_terms_frame1"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_guide"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_frame1"
        app:layout_constraintRight_toLeftOf="@id/dialog_terms_check2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/dialog_terms_check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:text="개인정보 취급방침 동의 (필수)"
        android:textColor="@color/home_cash_"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/dialog_terms_check1"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_frame1"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_frame1"
        app:layout_constraintTop_toTopOf="@+id/dialog_terms_frame1" />


    <FrameLayout
        android:id="@+id/dialog_terms_frame2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_terms_frame1"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg" />

    <ImageView
        android:id="@+id/dialog_terms_check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vec_checkbox_blank_circle_outline"
        app:layout_constraintTop_toTopOf="@id/dialog_terms_frame2"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_guide"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_frame2"
        app:layout_constraintRight_toLeftOf="@id/dialog_terms_check4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/dialog_terms_check4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:text="위치 기반 서비스 약관 동의 (필수)"
        android:textColor="@color/home_cash_"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/dialog_terms_check3"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_frame2"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_frame2"
        app:layout_constraintTop_toTopOf="@+id/dialog_terms_frame2" />


    <FrameLayout
        android:id="@+id/dialog_terms_frame3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_terms_frame2"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg" />

    <ImageView
        android:id="@+id/dialog_terms_check5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vec_checkbox_blank_circle_outline"
        app:layout_constraintTop_toTopOf="@id/dialog_terms_frame3"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_guide"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_frame3"
        app:layout_constraintRight_toLeftOf="@id/dialog_terms_check6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/dialog_terms_check6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubworld_dotum_light"
        android:text="마케팅 활용 앱푸시 수신동의 (선택)"
        android:textColor="@color/home_cash_"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/dialog_terms_check5"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_frame3"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_frame3"
        app:layout_constraintTop_toTopOf="@+id/dialog_terms_frame3" />


    <ImageView
        android:id="@+id/dialog_terms_allBtn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_btn_rectangle"
        app:layout_constraintTop_toBottomOf="@id/dialog_terms_frame3"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg"
        app:layout_constraintBottom_toTopOf="@id/dialog_terms_nextBtn" />

    <TextView
        android:id="@+id/dialog_terms_allBtn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:text="전체동의"
        android:textColor="@color/corlor_black"
        android:textSize="19dp"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_allBtn"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_allBtn"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_allBtn"
        app:layout_constraintTop_toTopOf="@+id/dialog_terms_allBtn" />



    <ImageView
        android:id="@+id/dialog_terms_nextBtn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_btn_rectangle"
        app:layout_constraintTop_toBottomOf="@id/dialog_terms_allBtn"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_bg"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_bg" />


    <TextView
        android:id="@+id/dialog_terms_btn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:text="다 음"
        android:textColor="@color/color_gray"
        android:textSize="19dp"
        app:layout_constraintLeft_toLeftOf="@id/dialog_terms_nextBtn"
        app:layout_constraintRight_toRightOf="@id/dialog_terms_nextBtn"
        app:layout_constraintBottom_toBottomOf="@id/dialog_terms_nextBtn"
        app:layout_constraintTop_toTopOf="@+id/dialog_terms_nextBtn" />



</androidx.constraintlayout.widget.ConstraintLayout>