<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tutorial_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_logo"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_id_bg"
        android:hint="이메일을 입력해주세요"
        android:textColorHint="@color/color_gray"
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:layout_marginBottom="15dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_pw_et"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3"/>

    <EditText
        android:id="@+id/login_pw_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_id_bg"
        android:hint="비밀번호를 입려해주세요"
        android:textColorHint="@color/color_gray"
        android:textSize="15dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:layout_marginBottom="15dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/login_id_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_signInBtn"/>

    <ImageView
        android:id="@+id/login_signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_sign_in"
        app:layout_constraintTop_toBottomOf="@id/login_pw_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/login_signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:textSize="16dp"
        android:background="@color/transparent"
        android:textColor="@color/dark_gray_press"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/login_signInBtn"
        app:layout_constraintLeft_toRightOf="@id/login_findPW"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/login_findPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/findPW"
        android:fontFamily="@font/kopubworld_dotum_bold"
        android:textSize="16dp"
        android:background="@color/transparent"
        android:textColor="@color/dark_gray_press"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/login_signUpBtn"
        app:layout_constraintTop_toBottomOf="@id/login_signInBtn"/>








    <ImageView
        android:id="@+id/ivFirstBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_kakao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivSecondBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.9"
        />


